---
import ProjectsGrid from "@components/ProjectsGrid.astro";
import Layout from "@layout/Layout.astro";

const projects = [
  {
    name: "Funky",
    description:
      "A command line application for managing reusable shell functions.",
    link: "https://github.com/KyleChamberlin/funky",
    img: "funky",
  },
  {
    name: "Stencil",
    description:
      "A templating cli written in Rust.",
    link: "https://github.com/KyleChamberlin/stencil",
    img: "stencil",
  },
  {
    name: "Hoe",
    description:
      "A garden hoe to making managing your Digital Garden easier from the terminal.",
    link: "https://github.com/KyleChamberlin/hoe",
    img: "hoe",
  },
  {
    name: "Micro",
    description:
      "xUnit style testing framework for AutoIt3.",
    link: "http://autoitmicro.github.io/MicroUnitTestingFramework/",
    img: "micro"
  },
  {
    name: "Demonic Tutor",
    description:
      "Slack bot for finding Magic the Gathering cards using the mtg.wtf API.",
    link: "https://github.com/KyleChamberlin/demonic-tutor",
    img: "tutor"
  },
  {
    name: "Space Debris: The Game!",
    description:
      "A Bevy game made to promote the Space Debris web-series.",
    link: "https://github.com/KyleChamberlin/SpaceDebris",
    img: "spacedebris"
  },
];

const title="Projects";
const description="Things I have built to make software development more enjoyable"
const blurb="I’ve worked on tons of little projects over the years but these are\
          the ones that I’m most proud of. All of them are open-source, so if\
          you see something that piques your interest, check out the code and\
          contribute if you have ideas for how it can be improved."
---

<Layout
  pageTitle={title}
  description={description}
  type="content"
>
  <main class="px-8 pt-16 mx-auto max-w-6xl sm:pt-24 lg:px-16">
    <div class="flex flex-col mt-4 space-y-8">
      <div class="flex flex-col space-y-4">
        <h1
          class="text-4xl font-bold tracking-tighter sm:text-5xl max-w-[25ch]"
        >
          {description}
        </h1>
        <p class="text-primary-300 max-w-[65ch]">
          {blurb}
        </p>
      </div>
      <ProjectsGrid projects={projects} />
    </div>
  </main>
</Layout>
